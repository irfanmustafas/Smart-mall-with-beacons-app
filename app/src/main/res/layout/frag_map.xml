<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="373.5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/map_new" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:text="           Never get lost "
        android:textColor="@color/buttn"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"

        android:text="           Go to the mall map to see \n
                    all the stores "
        android:textColor="@color/buttn"
        android:textSize="25sp" />

    <Button
        android:id="@+id/map_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttn"
        android:fontFamily="sans-serif"
        android:text="go to the map"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>